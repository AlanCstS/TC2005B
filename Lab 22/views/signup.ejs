<%- include('includes/head.ejs') %>

<div style="padding: 0px 40px 20px 40px;">
    <h1 class="title">Regístrate</h1>

    <form action="/usuarios/signup" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
        
        <label for="nombre">Nombre:</label>
        <input required name="nombre" id="nombre" type="text" class="form-control" placeholder="Nombre">
        <br><br>
        <label for="username">Username:</label>
        <input required name="username" id="username" class="form-control" type="text" placeholder="Alan">
        <br>
        <% if (mensaje != '') { %>
            <div class="alert alert-info" role="alert">
                <%= mensaje %>
            </div>
        <% } %>
        <br>
        <label for="password">Contraseña:</label>
        <input required name="password" id="password" class="form-control" type="password" placeholder="password">
        <br><br>
        <input class="btn btn-success" type="submit" value="Sign up">

    </form>
</div>